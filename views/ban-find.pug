html 
  head 
  body 
  a(href='/') go home 
  br
  form(action='/bans/find', method='POST')
    | Minecraft Username: 
    input(type="text", name="minecraft_username") 
    input(type="submit", value="Find me")
  if player !== null && bans !== null
    p= 'Minecraft Username:' + player
    table(border='1')
      tr
        th minecraft uuid
        th banned by
        th server
        th reason
        th start 
        th end 
      each ban in bans
        tr 
          td= ban.banned_minecraft_uuid
          td
            a(href='users/' + ban.banned_by)= 'User #' + ban.banned_by
          td= ban.server
          td= ban.reason
          td= ban.start 
          td= ban.end 